{
  "manifest_version": 3,
  "name": "ChatGPT Extension",
  "version": "1.0",
  "description": "Agrega un navbar y un men√∫ desplegable interactivo en chat.openai.com",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["js/contentScript.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["data/options.json"],
      "matches": ["https://chatgpt.com/*"]
    }
  ],
  "permissions": []
}
