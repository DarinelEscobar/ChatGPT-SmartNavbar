{
  "manifest_version": 3,
  "name": "ChatGPT Extension",
  "version": "1.0",
  "description": "Agrega un navbar y un men√∫ desplegable interactivo en chat.openai.com",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon1.png",
      "48": "icons/icon2.png",
      "128": "icons/icon3.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["js/contentScript.bundle.js"],
      "css": ["css/contentScript.css"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["data/options.json"],
      "matches": ["https://chatgpt.com/*"]
    }
  ],
  "permissions": ["storage", "windows"]
}
